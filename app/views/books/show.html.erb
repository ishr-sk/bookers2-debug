<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@books.user) do %>
            <%= attachment_image_tag(@books.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, book_path(@books) %></td>
          <td><%= @books.body %></td>
          <!--いいね機能実装-->
          <!--上記コードの変数と合わせること（@つける）-->
          <td>
            <% if @books.favorited_by?(current_user) %>
            <p>
              <%= link_to book_favorites_path(@books), method: :delete do %>
                ♥<%= @books.favorites.count %>
              <% end %>
            </p>
            <% else %>
            <p>
              <%= link_to book_favorites_path(@books), method: :post do %>
                ♡<%= @books.favorites.count %>
              <% end %>
            </p>
            <% end %>
          </td>
          <!--コメント数表示-->
          <td>
            <p>コメント数：<%= @books.book_comments.count %></p>
          </td>
          <!--他ユーザーが投稿した本の編集、削除のリンクを表示させない-->
          <% if @books.user == current_user %>
          <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success edit_book_#{@books.id}" %></td>
          <td><%= link_to 'Destroy', book_path(@books), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@books.id}"%></td>
          <% end %>
        </tr>
      </table>
      <!--コメント機能実装-->
      <!--コメント表示-->
      <div class="comments">
        <% @books.book_comments.each do |book_comment| %>
          <p>
          <%= link_to user_path(book_comment.user.id) do %>
            <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %><br>
            <%= book_comment.user.name %>
          <% end %>
          <%= book_comment.comment %>
          <% if book_comment.user == current_user %>
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
          <% end %>
        <% end %>
      </div>
      <!--コメント投稿フォーム-->
      <div class="new-comment">
        <%= form_with(model:[@books, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5',placeholder: "comment", class: 'form-control' %><br />
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>